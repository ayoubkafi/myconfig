#!/bin/bash

file=$(ls $HOME/Pictures/shot)
if [ $file != "$HOME/Pictures/shot" ]; then
  imlib2_grab shot$n.png
  notify-send "Done"
  exit
fi

n=1
while true
do
  file=$(ls $HOME/Pictures/shot$n.png)
  file2="$HOME/Pictures/shot$n.png"
  if [ "$file" != "$file2" ]; then
    break
  fi
  n=$((n+1))
done

imlib2_grab $HOME/Pictures/shot$n.png
notify-send "Done"
