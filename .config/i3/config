    focused_workspace  #C26B0B #C26B0B #ffffff
    active_workspace   #5f676a #5f676a #ffffff
    inactive_workspace #262626 #262626 #BBBBBB
    urgent_workspace   #900000 #900000 #ffffff
    binding_mode       #900000 #900000 #ffffff
  }
}

