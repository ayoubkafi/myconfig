# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!
# Please see file:///usr/share/doc/i3/userguide.html for a coplete referenc!

# super
set $mod Mod4
# alt
set $alt Mod1

# Font 
font pango:cascadiacode 8

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status

# brightness controls
bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym XF86MonBrightnessUp   exec xbacklight -inc 5
bindsym XF86AudioMute exec pamixer -t

# volume controls
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioRaiseVolume exec pamixer -t 5

# lock screen
bindsym $mod+x exec i3lock -i "Pictures/Wallpapers/wallpaper.png"
#bindsym $mod+x exec betterlockscreen -l dim

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $TERM

# start browser
bindsym $mod+b exec $BROWSER

# kill focused window
bindsym $mod+q kill

# start dmenu
bindsym $mod+d exec dmenu_run -p "Run :"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left   focus left
bindsym $mod+Down   focus down
bindsym $mod+Up     focus up
bindsym $mod+Right  focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left   move left
bindsym $mod+Shift+Down   move down
bindsym $mod+Shift+Up     move up
bindsym $mod+Shift+Right  move right

# toogle split
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the (parent, child) container
bindsym $mod+p focus parent
bindsym $mod+o focus child

# Define names for default workspaces for which we configure key bindings later on.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch between workspaces
bindsym $alt+l workspace next
bindsym $alt+h workspace prev

bindsym $alt+k exec i3 gaps inner current plus 8 && i3 gaps outer current plus 1
bindsym $alt+j exec i3 gaps inner current minus 8 && i3 gaps outer current minus 1

# switch to workspace
bindsym $mod+ampersand    workspace number $ws1
bindsym $mod+eacute       workspace number $ws2
bindsym $mod+quotedbl     workspace number $ws3
bindsym $mod+apostrophe   workspace number $ws4
bindsym $mod+parenleft    workspace number $ws5
bindsym $mod+minus        workspace number $ws6
bindsym $mod+egrave       workspace number $ws7
bindsym $mod+underscore   workspace number $ws8
bindsym $mod+ccedilla     workspace number $ws9
bindsym $mod+agrave       workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# rules
assign [class="firefox"] 2
assign [class="vlc"] 4

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3
bindsym Control+$alt+q exec [ $(echo -e "no\nyes" | dmenu -i -p "Do you want to exit i3 ?") == "yes" ] && i3 exit
# shutdown
bindsym Control+$alt+s exec Ashutdown
# reboot
bindsym Control+$alt+r exec Areboot

# resize 
bindsym Control+$alt+h exec . $HOME/.scripts/i3/i3resize left
bindsym Control+$alt+j exec . $HOME/.scripts/i3/i3resize down
bindsym Control+$alt+k exec . $HOME/.scripts/i3/i3resize up
bindsym Control+$alt+l exec . $HOME/.scripts/i3/i3resize right

# same bindings, but for the arrow keys
bindsym Control+$alt+Left   exec . $HOME/.scripts/i3/i3resize left
bindsym Control+$alt+Down   exec . $HOME/.scripts/i3/i3resize down
bindsym Control+$alt+Up     exec . $HOME/.scripts/i3/i3resize up
bindsym Control+$alt+Right  exec . $HOME/.scripts/i3/i3resize right

# move window
bindsym $mod+Control+h move left 10
bindsym $mod+Control+j move down 10
bindsym $mod+Control+k move up 10
bindsym $mod+Control+L move right 10

# status bar
bar {
  #status_command i3status -c ~/.config/i3status/i3status.conf
  status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
  position top
  height 27
  workspace_min_width 35
  separator_symbol /
  #font pango:JetBrainsMonoMedium 12
  font pango:cascadiacode 14

  colors {
